body {
	padding: 0;
	margin: 0;
	background: #fff;

	font-family: 'Roboto', sans-serif;
	font-size: 13px;

	select {
		max-width: 150px;
	}

	box-sizing: border-box;

	*, *:before, *:after {
		box-sizing: inherit;
	}
}

/* variables color */

$c-main-theme-color = #5a90d1;

$c-text-color = rgba(40, 50, 55, 1);
$c-link-color = $c-main-theme-color;

/* !variables color */

a, a:visited, a:active {
	color: $c-link-color;
	transition: color ease-in-out 0.1s;
}

a:hover {
	color: lighten($c-link-color, 5);
}

.blocks-tbl .block {
	display: block;
	margin-bottom: 5px;
	background-color: #efefef;
	border: none !important;
	padding: 10px;

	.prior, .top {
		display: none;
	}

	.title {
		text-align: left;
	}
}

.b-admin {

	&-header {
		display: flex;
		height: 50px;
		line-height: 48px;
		padding-left: 20px;
		font-size: 20px;
		background-color: #5a90d1;
		margin-bottom: 20px;

		&-sitename {
			height: 38px;
			text-decoration: none;
			color: #fff !important;
			border-bottom: 1px solid rgba(255, 255, 255, 0.5);

		}
	}

	&-breadcrumbs {
		display: flex;
		margin-bottom: 20px;
		margin-left: 20px;
		font-size: 90%;
		opacity: .5;
		transition: all ease-in-out .1s;

		&:hover {
			opacity: 1;
		}

		&-item {
			margin-left: 5px;

			&:first-child {
				margin-right: 5px;
			}
		}
	}

	&-structure {

		&-caption {
			display: block;
			font-size: 16px;
			margin: 20px 0px 0px;
			padding-left: 20px;
		}

		&-tree {
			margin-top: 10px;
			padding: 10px 10px 20px;

			background-color: #fff;

			-moz-border-radius: 4px;
			-webkit-border-radius: 4px;
			border-radius: 4px;

			-webkit-box-shadow: 0px 2px 10px -5px rgba(0, 0, 0, 1);
			-moz-box-shadow: 0px 2px 10px -5px rgba(0, 0, 0, 1);
			box-shadow: 0px 2px 10px -5px rgba(0, 0, 0, 1);

			a {
				text-decoration: none;
				border-bottom: 1px solid rgba(25, 25, 25, 0.25);
				color: rgba(25, 25, 25, 1);
				opacity: 0.75;
				transition: all 0.25s ease;
				cursor: pointer;
				font-size: 14px;

				&:hover {
					opacity: 1;
					border-bottom: 1px solid rgba(25, 25, 25, 0.5);
				}
			}

		}
	}

	&-menu {
		padding-left: 40px;
		display: flex;
		margin: 10px 0px 30px;

		&-item {
			margin-right: 20px;
			font-size: 14px;

			color: #444;

			text-decoration: none;

			background-color: #fff;
			height: 30px;
			line-height: 29px;
			padding-left: 20px;
			padding-right: 20px;
			opacity: .5;

			-moz-border-radius: 4px;
			-webkit-border-radius: 4px;
			border-radius: 4px;

			-webkit-box-shadow: 0px 2px 10px -5px rgba(0, 0, 0, 1);
			-moz-box-shadow: 0px 2px 10px -5px rgba(0, 0, 0, 1);
			box-shadow: 0px 2px 10px -5px rgba(0, 0, 0, 1);

			transition: all .25s linear;

			&:hover {
				opacity: 1;
			}

			&__active {
				opacity: 1;
			}
		}
	}

	&-content {
		display: flex;
		flex-wrap: nowrap;

		width: 100%;
		max-width: 100%;
		//overflow: hidden;
		//padding-right: 20px;

		&-column {
			//min-width: 300px;
			//max-width: 200px;
			//margin-left: 20px;
			background-color: #fff;
			padding: 16px 20px;

			//display: inline-block;

			margin-bottom: 40px;

			-webkit-box-shadow: 0px 2px 10px -5px rgba(0, 0, 0, 1);
			-moz-box-shadow: 0px 2px 10px -5px rgba(0, 0, 0, 1);
			box-shadow: 0px 2px 10px -5px rgba(0, 0, 0, 1);

			transition: all .25s linear;

			//flex-grow: 0;
			//flex-basis: 25%;

			&__narrow {
				flex-basis: 260px;
				//flex-grow: 2;
				//width: 20%;
				//min-width: 250px;
				//max-width: 300px;
			}

			&__main {
				flex-grow: 1;
				flex-basis: 0;
				//width: 80%;
			}

			&-header {
				font-size: 14px;
				margin-bottom: 16px;
			}
		}
	}

	&-tabs {
		display: flex;
		flex-wrap: wrap;
		margin-bottom: 10px;

		&-tab {
			margin-right: 10px;


			background-color: #5a90d1;
			height: 40px;
			line-height: 40px;
			text-align: center;
			padding: 0px 20px;

			box-shadow: 0 4px 8px 0 alpha(darken(#5a90d1, 20%), .1),inset 0 1px 2px 0 lighten(#5a90d1, 10);
			cursor: pointer;

			-moz-border-radius: 4px;
			-webkit-border-radius: 4px;
			border-radius: 4px;

			&:hover {
				background-color: darken(#5a90d1, 20%);
			}

			&__active {
				background-color: darken(#5a90d1, 20%);
				cursor: default;
			}

			a {
				text-decoration: none;
				color: #fff;
			}

			//-webkit-box-shadow: 0px 2px 10px -5px rgba(0, 0, 0, 1);
			//-moz-box-shadow: 0px 2px 10px -5px rgba(0, 0, 0, 1);
			//box-shadow: 0px 2px 10px -5px rgba(0, 0, 0, 1);

			transition: all .25s linear;
		}
	}

	&-containers {
		width: 100%;

		table {
			border: 1px solid #ccc;
		}
	}
}

.tree {
	height: 32px;
	line-height: 32px;
}

.col-cont {
	background-color: transparent;
}

.lang {
	display: block;
}
.str-mini {
	background-color: transparent;
	display: block;

	.l1, .l2, .l3, .l4 {
		font-weight: 400;
		//max-width: 400px;
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
	}
}

.button {
	padding: 4px 8px;
	margin: 2px 10px;

	-moz-border-radius: 4px;
	-webkit-border-radius: 4px;
	border-radius: 4px;

	-webkit-box-shadow: 0px 2px 10px -5px rgba(0, 0, 0, 1);
	-moz-box-shadow: 0px 2px 10px -5px rgba(0, 0, 0, 1);
	box-shadow: 0px 2px 10px -5px rgba(0, 0, 0, 1);
}

.l {
	max-width: 220px;
}

.cms {
	&-list-control {
		position: relative;
		width: 16px;
		height: 16px;
		display: inline-block;
		border-radius: 4px;
		margin: 12px 10px 12px 0;

		background-color: $c-link-color;

		opacity: .5;
		transition: opacity ease-in-out .1s;

		&:hover {
			opacity: 1;
		}

		img {
			position: absolute;
			left: -100000px;
		}

		&__expand {
			text-align: center;
			//text-decoration: none;
			z-index: 1;

			&::before {
				content: "+";
				text-decoration: none;
				color: #fff;
				position: absolute;
				top: -12px;
				left: 4px;
				font-size: 14px;
				z-index: 2;
			}
		}

		&__collapse {
			&::before {
				content: "-";
				text-decoration: none;
				color: #fff;
				position: absolute;
				top: -13px;
				left: 5px;
				font-size: 18px;
				z-index: 2;
			}
		}
	}

	&-structure {
		&-list {
			width: 100%;

			&-page {
				display: flex;
				flex-wrap: nowrap;
				justify-content: space-between;

				width: 100%;

				height: 40px;
				line-height: 40px;

				border-top: 1px rgba(230, 230, 230, .5) solid;
				transition: opacity ease-in-out .1s;
				//padding-left: 10px;

				&__disabled {
					background-color: rgba(245, 245, 245, 1);
					opacity: .5;
				}

				&-title {
					white-space: nowrap;
					width: 80%;

					display: flex;

					&-label {
						margin-right: 5px;
						overflow: hidden;
						white-space: nowrap;
						text-overflow: ellipsis;
						//max-width: 80%;

						a {
							color: $c-text-color;

						}
					}

					&-controls {
						width: 210px;
						font-size: 90%;

						&-item {
							font-size: 90%;
							opacity: .75;
							transition: opacity ease-in-out .1s;
							margin-right: 2px;

							&:hover {
								opacity: 1;
							}
						}
					}
				}

				&-controls {
					display: flex;
					width: 20%;
					justify-content: flex-end;

					&-item {
						margin-right: 10px;
					}
				}


				&:hover {
					background-color: darken(#fff, 2);
				}

				&__level {
					&-l1 {
						padding-left: 10px;
						font-weight: 500;
					}
					&-l2 {
						padding-left: 10px;
						font-weight: 500;
					}
					&-l3 {
						padding-left: 20px;
					}
					&-l4 {
						padding-left: 40px;
					}
				}



			}
		}
	}
}

.lang {
	margin-bottom: 10px;
}

.b-admin__body {
	&_login {
		background-color: rgba(230, 230, 230, 1);
	}
}

.b-admin__login {
	display: flex;
	width: 400px;
	padding: 25px 40px;
	flex-direction: column;
	border-radius: 4px;

	box-shadow: 0 16px 64px 0 rgba(93,134,41,.15);

	background-color: rgba(255, 255, 255, 1);
	margin: 10vh auto;

	&__submit {
		padding: 10px;
		text-align: right;

		&__button {
			display: inline-block;
			vertical-align: baseline;
			text-align: center;
			cursor: pointer;
			text-decoration: none;
			outline: none;
			-webkit-user-select: none;
			-moz-user-select: none;
			-ms-user-select: none;
			user-select: none;
			transition: all .1s ease-in;
			border: none;
			border-radius: 4px;
			background: #88c43d;
			height: 40px;
			padding: 0 20px;
			box-shadow: inset 0 1px 2px 0 #b8dc8b;
			font-size: 14px;
			line-height: 40px;
			color: white;
			font-weight: 400;
		}
	}

	&__field {
		padding: 10px;
		display: flex;
		align-items: center;
		justify-content: space-between;
		width: 100%;

		&__name {
			margin-right: 20px;
			color: rgba(140, 140, 140, 1);
			font-size: 14px;
		}

		&__input {
			height: 40px;
			border: 2px solid rgba(230, 230, 230, 1);
			padding-left: 10px;
		}
	}
}