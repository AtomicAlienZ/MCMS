.sal-footer {

	&__block {
		display: flex;
		margin-bottom: 20px;
	}

	&__menu {
		margin-right: 40px;

		display: flex;
		flex-direction: column;

		&__title {
			display: block;
			font-size: 110%;
			font-weight: bold;
			margin-bottom: 20px;
		}

		&__item {
			margin-bottom: 10px;
			display: inline-block;
		}
	}

}