.sal-ui {

	&__button {
		display: inline-block;
		cursor: pointer;

		//box-sizing: content-box;

		//border: 4px solid transparent;
		padding: 0 20px;

		border: none;

		background:
		linear-gradient(lighten($sal-green, 5), $sal-green) border-box,
		linear-gradient($sal-green, lighten($sal-green, 5)) padding-box,
		$sal-green border-box;

		box-shadow:
		0 10px 16px -10px alpha(darken($sal-green, 20), .25),
		inset 0 2px 4px rgba(40, 40, 40, .05);

		font-size: 125%;
		height: 40px;
		line-height: 40px;
		text-decoration: none;
		color: alpha(#fff, 1);

		outline: none;

		transition: all .1s ease-in-out;

		&:hover {
			box-shadow:
			0 8px 20px -10px alpha(darken($sal-green, 20), .4),
			inset 0 2px 4px rgba(40, 40, 40, .05);
		}

		&_light {
			background: none;
			box-sizing: border-box;
			border: 1px solid lighten($sal-green, 30);

			box-shadow:
			inset 0 2px 4px rgba(40, 40, 40, .05);

			color: $c-main-text;

			&:hover {
				box-shadow:
				inset 0 2px 8px rgba(40, 40, 40, .15);
			}
		}

		&_white {
			background: none;
			box-sizing: border-box;
			border: 1px solid lighten($sal-green, 30);

			color: $c-main-text;
		}
	}
}

input {
	border: 1px solid rgba(230, 230, 230, 1);
}