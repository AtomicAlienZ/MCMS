@media (max-width: 1010px) {
	.sal-mainLine__controls {
		margin-left: auto;
	}

	.sal-search {
		flex-grow: 1;
	}
}

@media (max-width: 860px) {
	.sal-basket__dropdown__item {
		padding-left: 130px;
		min-height: 110px;

		&__image {
			width: 110px;
			height: 110px;
		}
	}
}

@media (max-width: 900px) {
	.sal-itemView__content {
		padding-left: 0;

		&__gallery {
			position: static;
			width: 100%;
		}
	}
}

@media (max-width: 800px) {
	.sal-mainPage__recommended {
		padding-left: 0;
		display: flex;
		flex-flow: row wrap;
		margin-bottom: 0;

		&__main {
			position: static;
			margin-bottom: 20px;
			width: auto;
			display: block;
			flex-basis: 100%;
			flex-shrink: 1;
			padding-bottom: 35px;
		}

		&__secondary, &__info {
			margin: 0;
			display: inline-block;
			vertical-align: middle;
			flex: 1 1 40%;
			margin-bottom: 20px;
			margin-right: 10px;
		}

		&__info {
			margin-right: 0;
			margin-left: 10px;
		}
	}

	.sal-basket__dropdown__item {
		&__info {
			flex-flow: row wrap;
		}

		&__count {
			padding: 0 20px;

			&__field {
				width: 40px;
				text-align: center;
				padding-left: 0;
				padding-right: 0;
			}
		}

		&__sum {
			margin-left: auto;
		}
	}

}

@media (max-width: 600px) {
	.sal-mainPage__recommended__main {
		font-size: 20px;
		line-height: 30px;
	}
}

@media (max-width: 530px) {
	.sal-basket__dropdown__item {
		&__price {
			margin-bottom: 20px;
			margin-right: 30px;
			margin-left: 130px;
		}

		&__count {
			padding: 0;
		}

		&__info {
			margin-left: -130px;
		}
	}

}

@media (max-width: 480px) {
	.sal-basket__dropdown {
		width: 100vw;
		max-width: 100vw;
		margin-right: -20px;
	}

	.sal-header {
		padding-left: 20px;
		padding-right: 20px;

		&__menu {
			margin-left: -20px;
			margin-right: -20px;
			padding-left: 20px;
			padding-right: 20px;
		}
	}

	.sal-content, .sal-footer {
		padding-left: 20px;
		padding-right: 20px;
	}

	.sal-search {
		flex-wrap: wrap;
		max-width: 100%;

		.sal-ui__button {
			margin: 10px 0 0!important;
		}

		&__phrase {
			flex-basis: 100%;
		}

		&__input {
			min-width: 1px!important;
			flex-grow: 1;
			flex-shrink: 1;
			margin-top: 10px;
		}
	}

	.sal-mainLine__controls {
		margin: 10px 0 0;
		flex-basis: 100%;

		>.sal-ui__button {
			flex-grow: 1;
			flex-shrink: 1;
			flex-basis: 50%;
			margin-right: 5px;
		}
	}

    .sal-basket {
		flex-grow: 1;
	    flex-shrink: 1;
	    flex-basis: 50%;
	    margin-left: 5px;

		&__button {
			width: 100%;
			padding-right: 0;
		}
    }

    .sal-slyScroll__arrow {
	    display: none;
    }

    .sal-categories {
	    margin-top: 10px;
    }

    .sal-itemView__catPath__item {
	    margin: 0;
    }

    .sal-itemView__content__fields {
	    &__fields {
		    display: block;
		    width: 100%;
	    }

		&__field {
			display: block;
			margin-bottom: 10px;

			&__name, &__value {
				display: block;
			}
		}
    }

}
@media (max-width: 360px) {
	.sal-basket__dropdown__item {
		padding-left: 0;

		&__image {
			float: left;
			position: static;
			margin-right: 10px;
		}

		&__link {
			margin-top: 0;
			white-space: normal;
			display: inline;
		}

		&__price {
			margin: 0 0 10px;
		}

		&__info {
			margin: 0;
			padding-top: 10px;
			clear: both;
			text-indent: 0;
		}
	}

	.sal-basket__dropdown__contents__footer__buttons {
		display: block;

		&__button {
			width: 100%;

			&_back {
				margin-bottom: 10px;
			}
		}
	}
}